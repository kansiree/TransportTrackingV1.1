<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_detail"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            style="@style/head_detail"
            android:text="@string/tote_ID"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            style="@style/head_detail"
            android:gravity="center"
            android:text="กล่อง"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.34"
            android:id="@+id/tote_id_sent_on_shelf"
            android:gravity="center_vertical"
            style="@style/list_detail"
            android:text="@string/tote_ID"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:id="@+id/num_sent_on_shelf"
            style="@style/list_detail"
            android:gravity="center"
            android:text="กล่อง"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:weightSum="1"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_toLeftOf="@+id/image_sent_on_shelf"
                android:id="@+id/edit_sent_on_shelf"
                android:inputType="number"
                android:background="@drawable/background_white"
                style="@style/list_detail"
                android:layout_margin="2dp"
                android:gravity="center" />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="15dp"
                style="@style/list_detail"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/image_sent_on_shelf"
                android:background="@drawable/ic_pencil"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog">
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/bg_signature"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/dialog_signature_pad"
        android:orientation="horizontal"
        android:clickable="true">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clear"
            style="@style/DialogButtonDownload"
            android:background="@drawable/grey_button_bg"
            android:text="@string/word_clear" />

        <Button
            android:id="@+id/btn_save"
            style="@style/DialogButtonDownload"
            android:text="@string/word_save" />

    </LinearLayout>
</LinearLayout>

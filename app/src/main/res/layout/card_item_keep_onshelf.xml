<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_detail">

    <LinearLayout
        android:id="@+id/layout_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginBottom="2dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/ed_in_onshelf"
            style="@style/List_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/txt_in_onshelf"
            android:layout_weight="0.8"
            android:background="@drawable/rounded_edittext"
            android:hint="จำนวนลังเบรค"
            android:padding="5dp" />

        <TextView
            android:id="@+id/breakUnit"
            style="@style/List_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="เบรค (ลัง)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_break"
        android:layout_margin="5dp"
        android:background="@drawable/background_white"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/ed_in_onshelf_box"
            style="@style/List_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/txt_in_onshelf"
            android:layout_weight="0.8"
            android:background="@drawable/rounded_edittext"
            android:hint="จำนวนกล่อง"
            android:padding="5dp" />

        <TextView
            android:id="@+id/boxUnit"
            style="@style/List_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="กล่อง" />
    </LinearLayout>

</RelativeLayout>